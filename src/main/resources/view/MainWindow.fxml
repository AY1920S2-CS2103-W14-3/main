                    </VBox>
                     </children>
                  </AnchorPane>
                  <AnchorPane minHeight="500.0" minWidth="300.0" prefHeight="300.0" prefWidth="180.0" SplitPane.resizableWithParent="false">
                     <children>
                        <VBox fx:id="personCard" minHeight="500.0" minWidth="330.0" prefHeight="500.0" prefWidth="130.0" styleClass="pane-with-border">
                          <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                          </padding>
                           <children>
                              <Pane fx:id="personListPanelPlaceholder2" minHeight="500.0" minWidth="320.0" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
